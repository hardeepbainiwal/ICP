class Solution {
    public boolean isPerfectSquare(int num) {
        long low=1;
        long high=num;

        while(low<=high){
            long mid=low+(high-low)/2;
            long check=mid*mid;

            if(check==num) return true;
            else if(check>num) high=mid-1;
            else low=mid+1;
        }
        return false;
    }
}
